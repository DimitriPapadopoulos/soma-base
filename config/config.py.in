MAJOR_QT_VERSION = @DESIRED_QT_VERSION@
DEFAULT_BRAINVISA_SHARE = '@CMAKE_INSTALL_PREFIX@/share'

def _init_default_brainvisa_share():
  import soma, os
  share = os.getenv( 'BRAINVISA_SHARE' )
  if not share:
    share = os.getenv( 'SHFJ_SHARED_PATH' )
  if not share or not os.path.exists( share ):
    share = os.path.join( os.path.dirname( os.path.dirname( os.path.dirname( \
      soma.__file__ ) ) ), 'share' )
    if not os.path.exists( os.path.join( share, 'soma-base-@BRAINVISA_PACKAGE_VERSION_MAJOR@.@BRAINVISA_PACKAGE_VERSION_MINOR@' ) ):
      share = DEFAULT_BRAINVISA_SHARE
  return share

BRAINVISA_SHARE = _init_default_brainvisa_share()

